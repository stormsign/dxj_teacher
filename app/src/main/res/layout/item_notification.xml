<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_10dp"
        android:textColor="@color/notification_time"
        android:textSize="@dimen/text_12sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_received_time"
        android:layout_marginLeft="@dimen/notification_card_margin"
        android:layout_marginRight="@dimen/notification_card_margin"
        cardview:cardCornerRadius="3dp"
        cardview:cardElevation="1dp">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/notification_card_padding">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_323232"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/notification_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_title"
            android:layout_marginTop="@dimen/notification_content_to_title"
            android:textColor="@color/text_color_919191"
            android:textSize="@dimen/text_13sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>