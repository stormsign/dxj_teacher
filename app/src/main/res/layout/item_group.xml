    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cv_group"
        cardview:cardElevation="1dp"
        >
        <RelativeLayout
            android:padding="@dimen/padding_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/group_head"
                android:src="@mipmap/default_image"
                android:background="@drawable/imageview_border_white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <RelativeLayout
                android:layout_toRightOf="@id/group_head"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/text_orange2"
                    android:layout_alignParentTop="true"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leader_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团长：欧舒丹"
                        android:textSize="@dimen/text_14sp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_16dp"
                        />
                    <TextView
                        android:id="@+id/member_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团员：0人"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/text_color_848484"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/group_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="..."
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/text_color_848484"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>