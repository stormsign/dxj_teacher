<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:id="@+id/rl_second_category"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声乐"
            android:textColor="@color/text_color_646464"
            android:textSize="@dimen/text_16sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8dp"
            />
        <TextView
            android:id="@+id/more_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多学团"
            android:textColor="@color/text_color_939393"
            android:textSize="@dimen/text_14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_8dp"

            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cv_group"
        >
        <RelativeLayout
            android:padding="@dimen/padding_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/group_head"
                android:src="@mipmap/default_image"
                android:background="@drawable/imageview_border_white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <RelativeLayout
                android:layout_toRightOf="@id/group_head"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/text_16sp"
                    android:layout_alignParentTop="true"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leader_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团长：欧舒丹"
                        android:textSize="@dimen/text_14sp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_16dp"
                        />
                    <TextView
                        android:id="@+id/member_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团员：0人"
                        android:textSize="@dimen/text_14sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/group_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="..."
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/text_color_a4a4a4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>