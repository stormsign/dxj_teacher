<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/checkmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/xuetuan_cy_shanchu"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp">

            <TextView
                android:id="@+id/tv_list"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/text_black_voice"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/tv_list"
                android:text="科目"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_list"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="高中数学"
                android:textColor="@color/text_show"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_course_name"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="test"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_13sp" />

            <GridLayout
                android:id="@+id/gridlayout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">


                <TextView
                    android:id="@+id/tv_teacher"
                    style="@style/course"
                    android:text="老师上门" />

                <TextView
                    style="@style/course"
                    android:layout_marginLeft="22dp"
                    android:text="老师上门" />

                <TextView
                    style="@style/course"
                    android:text="老师上门" />

                <TextView
                    style="@style/course"
                    android:layout_marginLeft="22dp"
                    android:text="老师上门"

                    />

                <TextView
                    style="@style/course"
                    android:text="老师上门" />

                <TextView
                    style="@style/course"
                    android:layout_marginLeft="22dp"
                    android:text="老师上门"

                    />
            </GridLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

