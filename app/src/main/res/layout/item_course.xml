<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="2.5dp"
        android:layout_marginTop="2.5dp"
        android:src="@mipmap/btn_unselected"

        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    >
    <TextView
        android:id="@+id/tv_list"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:text="1"
        android:background="@color/text_black_voice"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_15sp"
        />
    <TextView
        android:layout_toRightOf="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科目"
        android:textSize="@dimen/text_16sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/margin_10dp"
        />
    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高中数学"
        android:textSize="@dimen/text_13sp"
        android:textColor="@color/text_show"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_below="@+id/tv_list"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_13sp"
        android:layout_below="@+id/tv_course_name"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="test"
        />

    <TextView
        android:layout_below="@+id/name"
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="老师上门"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_13sp"
        android:layout_marginTop="@dimen/margin_10dp"
        />
</RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

