<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content"
    android:orientation="vertical">

    <com.dxj.teacher.widget.TitleNavBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_study"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/faxian_ico_xuetuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="51dp"
            android:text="交友学团"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_15sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_peer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/faxian_ico_thfc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="51dp"
            android:text="同行风采"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_15sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/faxian_ico_yaoqing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="51dp"
            android:text="邀请朋友加入"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_15sp" />
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/btn"
        />

</LinearLayout>