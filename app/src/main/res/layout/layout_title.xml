<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    app:cardCornerRadius="0dp"
    >
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
<RelativeLayout

    android:id="@+id/rl_title_container"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="56dp">
    <!--android:background="@drawable/title_background"-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_8dp"
        android:gravity="center"
        android:text="titletitletitletitle"
        android:singleLine="true"
        android:textSize="@dimen/text_20sp"
        android:textColor="@color/text_color_323232"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@mipmap/fanhui"
        android:padding="@dimen/padding_16dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/title_button_selector"
        />

    <RelativeLayout
        android:id="@+id/rl_search_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/back"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/iv_nav_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:text="搜索"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/text_16sp"
            android:padding="@dimen/padding_16dp"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_nav_3"
            android:drawableLeft="@mipmap/find_xuetuan_ico_sousuo"
            android:drawablePadding="@dimen/padding_8dp"
            android:layout_margin="@dimen/padding_8dp"
            android:hint="@string/edit_search"
            android:textColorHint="@color/search_edit_969696"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/primary_text_default_material_light"
            android:padding="@dimen/padding_8dp"
            android:background="@drawable/shape_total_round_corner"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_nav_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_button_selector"
        android:src="@mipmap/find_xuetuan_ico_shezhi"
        android:padding="@dimen/padding_16dp"/>
    <TextView
        android:id="@+id/tv_action"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="创建"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/text_color_323232"
        android:background="@drawable/title_button_selector"
        android:layout_width="@dimen/height_56dp"
        android:layout_height="@dimen/height_56dp"
        />
    <ImageView
        android:id="@+id/iv_nav_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_nav_2"
        android:layout_centerVertical="true"
        android:src="@mipmap/find_xuetuan_ico_shezhi"
        android:background="@drawable/title_button_selector"
        android:padding="@dimen/padding_16dp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>