<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:id="@+id/rl_second_category"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声乐"
            android:textColor="@color/text_color_646464"
            android:textSize="@dimen/text_16sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8dp"
            />
        <TextView
            android:id="@+id/more_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多学团"
            android:textColor="@color/text_color_939393"
            android:textSize="@dimen/text_14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_8dp"

            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cv_member"
        cardview:cardElevation="1dp"
        >
        <RelativeLayout
            android:padding="@dimen/padding_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/check"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_16dp"
                android:paddingRight="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_selected"
                />
            </RelativeLayout>

            <ImageView
                android:id="@+id/member_head"
                android:src="@mipmap/default_image"
                android:background="@drawable/imageview_border_white"
                android:layout_toRightOf="@id/check"
                android:layout_centerVertical="true"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <RelativeLayout
                android:layout_toRightOf="@id/member_head"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/voice_unread"
                    />
                <TextView
                    android:id="@+id/member_name"
                    android:layout_toRightOf="@id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/text_color_323232"
                    android:layout_alignParentTop="true"

                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/member_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校/年级"
                        android:textSize="@dimen/text_14sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/member_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="个性签名"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/text_color_a4a4a4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>