<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/height_80dp"
        android:layout_height="@dimen/height_80dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_grida_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:gravity="top|right" >-->

    <!--<ImageView-->
    <!--android:id="@+id/item_grida_delimage"-->
    <!--android:layout_width="25dp"-->
    <!--android:layout_height="25dp"-->
    <!--android:layout_gravity="right|top"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:src="@drawable/quxiao_menu" />-->
    <!--</LinearLayout>-->
    <android.support.v7.widget.CardView
        android:id="@+id/item_grida_addimage"
        android:layout_width="@dimen/height_80dp"
        android:layout_height="@dimen/height_80dp"
        >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@mipmap/genren_xiangce_tianjia"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/margin_20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加照片"
            android:textColor="@color/text_black_two"
            android:textSize="@dimen/text_12sp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/margin_8dp"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_overlay"
        android:text="正在上传"
        android:textColor="@color/text_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="2.5dp"
        android:layout_marginTop="2.5dp"
        android:src="@mipmap/btn_unselected" />


</FrameLayout>