<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/group_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/imageview_border_white"
            android:src="@mipmap/default_image" />



            <TextView
                android:id="@+id/group_number"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignParentTop="true"
                android:background="@color/text_price"
                android:gravity="center"
                android:text="100/200"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_9sp"
                android:layout_toRightOf="@+id/group_head"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/group_number"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_14sp"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/group_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:textColor="@color/text_subject_details"
                android:textSize="@dimen/text_13sp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_alignBottom="@+id/group_head"
                android:layout_toRightOf="@+id/group_head"

                />

