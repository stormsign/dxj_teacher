<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content"
    android:orientation="vertical">

    <com.dxj.teacher.widget.TitleNavBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10dp">

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="@dimen/margin_10dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:src="@mipmap/default_avatar" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_toRightOf="@+id/img_avatar"
                            android:text="小白"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />

                        <ImageView
                            android:id="@+id/img_jiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/home_gerenziliao_jiantou"

                            />

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/img_jiantou"
                            android:src="@mipmap/me_ico_yulan" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_linear"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/relative"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@color/text_black_two" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/view_linear"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@mipmap/me_ico_qianbao" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:text="钱包"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/text_black_two" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@mipmap/me_ico_dingdang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:text="订单"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@android:color/transparent"
                android:text="业务管理"
                android:textColor="@color/text_black_64"
                android:textSize="@dimen/text_13sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/relative_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp"

                        >

                        <ImageView
                            android:id="@+id/img_me_xuetan"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_xuetuan" />

                        <TextView
                            android:id="@+id/tv_sudty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_xuetan"
                            android:text="我的学团"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_linear_two"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/relative_two"
                        android:layout_marginLeft="51dp"
                        android:background="@color/text_black_two" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_linear_two"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp">

                        <ImageView
                            android:id="@+id/img_me_pingjia"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_pingjia" />

                        <TextView
                            android:id="@+id/tv_pingjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_pingjia"
                            android:text="我的评价"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@android:color/transparent"
                android:text="我的资料"
                android:textColor="@color/text_black_64"
                android:textSize="@dimen/text_13sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/relative_me_userinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp"

                        >

                        <ImageView
                            android:id="@+id/img_me_userinfo"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_ziliao" />

                        <TextView
                            android:id="@+id/tv_me_userinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_userinfo"
                            android:text="个人资料"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_linear_three"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/relative_me_userinfo"
                        android:layout_marginLeft="51dp"
                        android:background="@color/text_black_two" />

                    <RelativeLayout
                        android:id="@+id/relative_me_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_linear_three"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp">

                        <ImageView
                            android:id="@+id/img_me_card"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_renzheng" />

                        <TextView
                            android:id="@+id/tv_me_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_card"
                            android:text="认证设置"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_linear_four"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/relative_me_card"
                        android:layout_marginLeft="51dp"
                        android:background="@color/text_black_two" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_linear_four"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp">

                        <ImageView
                            android:id="@+id/img_me_subject"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_kemu" />

                        <TextView
                            android:id="@+id/tv_me_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_subject"
                            android:text="擅长科目设置"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@android:color/transparent"
                android:text="其他"
                android:textColor="@color/text_black_64"
                android:textSize="@dimen/text_13sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/relative_me_teacher_strategy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp"

                        >

                        <ImageView
                            android:id="@+id/img_me_teacher_strategy"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_xuetuan" />

                        <TextView
                            android:id="@+id/tv_me_teacher_strategy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_teacher_strategy"
                            android:text="老师攻略"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_linear_five"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/relative_me_teacher_strategy"
                        android:layout_marginLeft="51dp"
                        android:background="@color/text_black_two" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_linear_five"
                        android:paddingBottom="@dimen/margin_10dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="@dimen/margin_10dp">

                        <ImageView
                            android:id="@+id/img_me_setting"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/me_ico_pingjia" />

                        <TextView
                            android:id="@+id/tv_me_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_me_setting"
                            android:text="设置"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_15sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>