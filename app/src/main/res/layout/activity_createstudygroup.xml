<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.dxj.teacher.widget.TitleNavBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.dxj.teacher.widget.TitleNavBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff"
        android:padding="@dimen/padding_16dp"
        >
        <ImageView
            android:id="@+id/iv_group_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:background="@drawable/imageview_border_white"
            android:src="@mipmap/default_image"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginTop="@dimen/margin_16dp"
        android:padding="@dimen/padding_16dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="科目"
            android:layout_gravity="left"
            android:textSize="@dimen/text_24sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff"
        android:layout_marginTop="@dimen/margin_16dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_24sp"
            android:hint="团名称"
            android:padding="@dimen/padding_16dp"
            android:background="@null"
            android:textColorHint="@color/hint_foreground_material_light"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_list"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_128dp"
            android:textSize="@dimen/text_24sp"
            android:hint="团简介"
            android:inputType="textMultiLine"
            android:background="@null"
            android:maxLines="500"
            android:padding="@dimen/padding_16dp"
            android:gravity="top"
            android:textColorHint="@color/hint_foreground_material_light"
            />

    </LinearLayout>
    <Button
        android:id="@+id/createGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/big_button"
        android:text="创建学团"
        android:textSize="@dimen/text_24sp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:onClick="createGroup"
        />



</LinearLayout>