<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content"
    >
    <com.dxj.teacher.widget.TitleNavBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.dxj.teacher.widget.TitleNavBar>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff"
        android:padding="@dimen/padding_16dp"
        >
        <ImageView
            android:id="@+id/iv_group_head"
            android:layout_width="@dimen/image_64dp"
            android:layout_height="@dimen/image_64dp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:background="@drawable/imageview_border_white"
            android:src="@mipmap/default_image"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:layout_marginTop="@dimen/margin_8dp"
        >
    <LinearLayout
        android:id="@+id/ll_group_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/text_14sp"
            android:layout_marginRight="24dp"
            android:padding="@dimen/padding_16dp"
            />
        <TextView
            android:id="@+id/tv_subjectName"
            android:text="科目"
            android:textSize="@dimen/text_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_orange"
            android:visibility="visible"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:paddingRight="@dimen/padding_16dp"
            android:paddingLeft="@dimen/padding_8dp"
            />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_gerenziliao_jiantou"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_16dp"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:layout_marginTop="@dimen/margin_8dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团名称"
            android:layout_gravity="left"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/text_color_646464"
            android:layout_marginRight="@dimen/margin_24dp"
            android:padding="@dimen/padding_16dp"
            />
        <EditText
            android:id="@+id/et_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="..."
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/text_color_323232"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:paddingRight="@dimen/padding_16dp"
            />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/divider_list"-->
            <!--android:layout_marginRight="@dimen/margin_16dp"-->
            <!--android:layout_marginLeft="@dimen/margin_16dp"-->
            <!--/>-->
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:layout_marginTop="@dimen/margin_8dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团简介"
            android:layout_gravity="left"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/text_color_646464"
            android:layout_marginRight="24dp"
            android:padding="@dimen/padding_16dp"
            />
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_128dp"
            android:textSize="@dimen/text_14sp"
            android:inputType="textMultiLine"
            android:hint="..."
            android:background="@null"
            android:maxLines="500"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:paddingRight="@dimen/padding_16dp"
            android:gravity="top"
            android:textColorHint="@color/hint_foreground_material_light"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/createGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/big_button"
        android:text="创建学团"
        android:textSize="@dimen/text_14sp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:onClick="createGroup"
        android:clickable="true"
        android:padding="@dimen/padding_16dp"
        />



</LinearLayout>