<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content"
    android:orientation="vertical">

    <com.dxj.teacher.widget.TitleNavBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.dxj.teacher.widget.TitleNavBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_province"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="省/市"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"></View>

            <ImageButton
                android:layout_width="50.5dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:src="@mipmap/geren_jiudugaozhong_jiatou" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_city"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="城市"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"></View>

            <ImageButton
                android:layout_width="50.5dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:src="@mipmap/geren_jiudugaozhong_jiatou" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_school"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@android:color/white"
        android:hint="就读高中"
        android:paddingLeft="@dimen/margin_10dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/et_grades"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:hint="请填写高考分数"
            android:paddingLeft="@dimen/margin_10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_14sp"
            android:background="@null"
            android:phoneNumber="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>
