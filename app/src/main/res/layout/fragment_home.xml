<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:id="@+id/swipe_refresh_layout"-->
<com.dxj.teacher.widget.MultiSwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="只有完善资料，才能被学生找到"
            android:textColor="@color/tv_home_title"
            android:textSize="@dimen/text_12sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relateive_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_lie_icon_geren" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/img_icon"
                        android:orientation="vertical"


                        >

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人信息"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_15sp" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:text="丰富的个人主页更助于招生"
                            android:textColor="@color/text_subject_details"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_gerenziliao_jiantou" />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/img_jiantou"
                        android:text="未填完" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_state"
                        android:src="@mipmap/home_lie_icon_nopass" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_black_two" />

                <RelativeLayout
                    android:id="@+id/relalative_good_subject"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <ImageView
                        android:id="@+id/img_icon_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_lie_icon_kemu" />

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/img_icon_one"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/tv_title_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="擅长科目设置"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title_one"
                            android:text="科目设置完成后学生才可以预约课程"
                            android:textColor="@color/text_subject_details"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_jiantou_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_gerenziliao_jiantou" />

                    <TextView
                        android:id="@+id/tv_state_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/img_jiantou_one"
                        android:text="未填完" />

                    <ImageView
                        android:id="@+id/img_state_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_state_one"
                         />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_black_two" />

                <RelativeLayout
                    android:id="@+id/relative_card"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <ImageView
                        android:id="@+id/img_icon_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_lie_icon_renzheng" />

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/img_icon_two"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/tv_title_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认证设置"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title_one"
                            android:text="认证后学生更放心更能保障你的利益"
                            android:textColor="@color/text_subject_details"
                            android:textSize="@dimen/text_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_jiantou_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_gerenziliao_jiantou" />

                    <TextView
                        android:id="@+id/tv_state_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/img_jiantou_two"
                        android:text="未填完" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_state_two"
                        android:src="@mipmap/home_lie_icon_nopass" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/margin_10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="不接受预约"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchcompat_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@null"
                android:checked="false"
                android:gravity="center"
                android:textOff="OFF"
                android:textOn="ON" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_laoshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="laoshi" />


        <!--<EditText-->
        <!--android:id="@+id/yzm"-->
        <!--android:hint="yzm"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
        <!--<Button-->
        <!--android:id="@+id/sms"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="验证码"-->
        <!--/>-->
        <!--<Button-->
        <!--android:id="@+id/verifysms"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="验证"-->
        <!--/>-->
        <Button
            android:id="@+id/userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人设置" />
        <Button
            android:id="@+id/kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="客服" />
    </LinearLayout>
</com.dxj.teacher.widget.MultiSwipeRefreshLayout>
</LinearLayout>
